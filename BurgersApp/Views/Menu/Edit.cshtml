@{
}

<form asp-controller="Menu" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input asp-for="Id" type="hidden"/>
    <label asp-for="Name">
    </label>
    <input asp-for="Name" />

    <label asp-for="Price">
    </label>
    <input type="number" asp-for="Price"/>
    <br />
    @foreach(var ingredient in Model.Ingredients)
    {
         <label asp-for="@ingredient.Name">
        </label>
        <input asp-for="@ingredient.Name"/> <br />
    }

    <button btn btn-lg-secondary>
        Submit
    </button>
</form>